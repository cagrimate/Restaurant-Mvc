@model Urun
@{
    ViewData["Title"] = "Düzenle";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/bg_5.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center mb-5">
                <h1 class="mb-2 bread">Ürünler</h1>
                <p class="breadcrumbs"><span class="mr-2"></span><span><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fa fa-chevron-right"></i></a></span></p>
            </div>
        </div>
    </div>
</section>
<div class="container-fluid mt-2">
    <h1 class="text-center">Ürün Düzenle</h1>
    <div class="d-flex justify-content-center">
        @*<img width="250" height="250" class="img-fluid border-dark" src="~/images/uploads/@Model.ResimYolu" />*@
    </div>
    <form class="m-3" asp-action="Duzenle" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div style="display:flex;flex-direction:row;align-items:center;">
            <input style="width:50px;height:50px;" type="checkbox" name="gorselEkle" id="gorselEkle">
            <label style="font-size:36px;margin:0px;margin-left:5px;" for="gorselEkle">Görsel Değiştirmek İstiyorum</label>
        </div>
        <div id="gorselAlan" class="form-group d-none">
            <label for="resim">Görsel:</label>
            <input type="file" id="resim" name="resim" class="form-control-file">
        </div>
        <div class="form-group d-none">
            <input asp-for="ResimYolu" class="form-control">
        </div>
        <div class="form-group d-none">
            <input asp-for="Id" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Ad"></label>
            <input asp-for="Ad" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Tanim"></label>
            <textarea asp-for="Tanim" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Fiyat"></label>
            <input type="number" step="0.1" asp-for="Fiyat" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="KategoriId"></label>
            <select class="form-control" asp-for="KategoriId" asp-items="@ViewBag.Kategoriler">
            </select>
        </div>
        <button type="submit" class="btn btn-success">Düzenle</button>
    </form>
</div>
@section Scripts {
    <script>
        const input = document.getElementById("gorselEkle");
        const gorselAlan = document.getElementById("gorselAlan");
        input.addEventListener("change", function (e) {
            gorselAlan.classList.toggle("d-none")
        });
    </script>
}
