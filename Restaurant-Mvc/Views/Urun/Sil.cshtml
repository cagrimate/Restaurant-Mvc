@model Urun
@{
    ViewData["Title"] = "Sil";

}
<p>@Model.Ad silinecek onaylıyor musunuz ?</p>
<form asp-action="Sil" method="post">
    <img width="250" height="250" class="img-fluid" src="~/images/uploads/@Model.ResimYolu" alt="Alternate Text" />
    <input asp-for="Id" type="hidden" />
    <button class="btn btn-danger">Sil </button>
    <a asp-controller="Urun" asp-action="Index">İptal</a>
</form>